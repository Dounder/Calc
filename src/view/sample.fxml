      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="250.0" prefWidth="400.0">
         <children>
            <Text layoutX="12.0" layoutY="44.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Operaciones con dos números" textAlignment="CENTER">
               <font>
                  <Font size="28.0" />
               </font>
            </Text>
            <TextField fx:id="firstNum" layoutX="19.0" layoutY="70.0" prefHeight="37.0" prefWidth="180.0" promptText="Primer número" />
